# Cloudflare Calls Configuration
# Get these values from: https://dash.cloudflare.com/?to=/:account/calls
CALLS_APP_ID=your_calls_app_id_here
CALLS_APP_SECRET=your_calls_app_secret_here

# Cloudflare TURN Service (Optional)
# Improves connection stability for users behind strict firewalls
TURN_SERVICE_ID=your_turn_service_id_here
TURN_SERVICE_TOKEN=your_turn_service_token_here

# OpenAI Realtime API (Optional)
# For AI assistant functionality
OPENAI_MODEL_ENDPOINT=https://your-openai-endpoint/openai/deployments/gpt-4o-realtime-preview/realtime?api-version=2024-10-01-preview
OPENAI_API_TOKEN=your_openai_api_token_here
OPENAI_MODEL_ID=gpt-4o-realtime-preview

# Video Quality Settings (Optional)
# Maximum bitrate for webcam streams (default: 1200000)
MAX_WEBCAM_BITRATE=1200000

# Maximum framerate for webcam streams (default: 24)
MAX_WEBCAM_FRAMERATE=24

# Maximum resolution based on smallest dimension (default: 1080)
MAX_WEBCAM_QUALITY_LEVEL=1080